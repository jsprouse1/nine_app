<p id="notice"><%= notice %></p>

<h1>Listing Coms</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
      <th>Video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coms.each do |com| %>
      <tr>
        <td><%= com.user %></td>
        <td><%= com.body %></td>
        <td><%= com.video_id %></td>
        <td><%= link_to 'Show', com %></td>
        <td><%= link_to 'Edit', edit_com_path(com) %></td>
        <td><%= link_to 'Destroy', com, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

